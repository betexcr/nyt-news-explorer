    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@types/react-helmet": "^6.1.11",
    "@types/react-window": "^1.8.8",
    "@types/swagger-ui-react": "^5.18.0",
    "@upstash/redis": "^1.35.4",
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "cross-env": "^10.0.0",
    "express": "^5.1.0",
    "http-proxy-middleware": "^3.0.5",
    "ioredis": "^5.4.1",
    "js-yaml": "^4.1.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-helmet": "^6.1.0",
    "react-router-dom": "^6.30.1",
    "react-scripts": "5.0.1",
    "react-window": "^1.8.11",
    "swagger-ui-react": "^5.27.1",
    "typescript": "^4.9.5",
    "workbox-webpack-plugin": "^7.1.0",
    "zod": "^3.22.4",
    "zustand": "^5.0.6"
  },
  "scripts": {
    "gen:types": "tsx scripts/gen-types.ts",
    "start": "tsx scripts/start.ts",
    "dev": "npm run start",
    "build": "cross-env GENERATE_SOURCEMAP=false DISABLE_ESLINT_PLUGIN=true react-scripts build && node scripts/copy-sw.js",
    "build:force": "cross-env GENERATE_SOURCEMAP=false DISABLE_ESLINT_PLUGIN=true NODE_ENV=production react-scripts build && node scripts/copy-sw.js",
    "build:cdn": "cross-env GENERATE_SOURCEMAP=false PUBLIC_URL=https://nyt.brainvaultdev.com react-scripts build && node scripts/copy-sw.js",
    "build:analyze": "cross-env GENERATE_SOURCEMAP=false ANALYZE=true react-scripts build && node scripts/copy-sw.js",
    "eject": "react-scripts eject",
    "test": "bun run test:cov",
    "test:cov": "react-scripts test --coverage --watchAll=false",
    "test:cov:strict": "react-scripts test --coverage --watchAll=false --runInBand --coverageReporters=text --coverageReporters=json-summary",
    "k6:smoke": "k6 run scripts/k6-cache-smoke.js",
    "typecheck": "tsc --noEmit",
    "purge:tag": "bun tsx scripts/purgeTag.ts",
    "deploy": "bash scripts/deploy.sh",
    "deploy:netlify": "bash scripts/deploy-netlify.sh --prod",
    "deploy:preview": "bash scripts/deploy-netlify.sh",
    "cdn:optimize": "node scripts/optimize-assets.js",
    "cdn:test": "node scripts/test-cdn.js",
    "cache:warm": "node scripts/daily-cache-warmer.js",
    "cache:warm:local": "BASE_URL=http://localhost:3000 node scripts/daily-cache-warmer.js",
    "cache:warm:manual": "curl -X POST https://nyt-news-explorer-nqtb4ofq3-albmunmus-projects.vercel.app/api/admin/warm-cache -H 'Authorization: Bearer nyt-admin-secure-key-2024' -H 'Content-Type: application/json' -d '{\"targets\": [\"topStories\", \"mostPopular\", \"books\"]}'"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@netlify/plugin-lighthouse": "^4.0.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/react-router-dom": "^5.3.3",
    "eslint": "^9.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "get-port": "^7.1.0",
    "globals": "^16.3.0",
    "jest-environment-jsdom": "^30.0.5",
    "netlify-cli": "^17.0.0",
    "tsx": "^4.20.3",
    "typescript-eslint": "^8.39.0",
    "yaml-loader": "^0.8.1"
  },
  "overrides": {
    "fork-ts-checker-webpack-plugin": {
      "schema-utils": "2.7.1"
    }
  }
}
