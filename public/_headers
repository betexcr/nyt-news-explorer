# Global security headers
/*
  X-Content-Type-Options: nosniff
  X-Frame-Options: DENY
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: camera=(), microphone=(), geolocation=()
  Strict-Transport-Security: max-age=31536000; includeSubDomains

# Static assets with immutable cache
/static/*
  Cache-Control: public, max-age=31536000, immutable
  Vary: Accept-Encoding

# JavaScript files - shorter cache for updates
*.js
  Content-Type: application/javascript
  Cache-Control: public, max-age=3600, must-revalidate
  Vary: Accept-Encoding

# CSS files - shorter cache for updates
*.css
  Content-Type: text/css
  Cache-Control: public, max-age=3600, must-revalidate
  Vary: Accept-Encoding

# JSON files
*.json
  Content-Type: application/json
  Cache-Control: public, max-age=3600

# Font files with long cache
*.woff
  Content-Type: font/woff
  Cache-Control: public, max-age=31536000
  Vary: Accept-Encoding

*.woff2
  Content-Type: font/woff2
  Cache-Control: public, max-age=31536000
  Vary: Accept-Encoding

*.ttf
  Content-Type: font/ttf
  Cache-Control: public, max-age=31536000
  Vary: Accept-Encoding

*.eot
  Content-Type: font/eot
  Cache-Control: public, max-age=31536000
  Vary: Accept-Encoding

# Image files with optimized caching
*.jpg
  Cache-Control: public, max-age=31536000, immutable
  Vary: Accept-Encoding

*.jpeg
  Cache-Control: public, max-age=31536000, immutable
  Vary: Accept-Encoding

*.png
  Cache-Control: public, max-age=31536000, immutable
  Vary: Accept-Encoding

*.webp
  Cache-Control: public, max-age=31536000, immutable
  Vary: Accept-Encoding

*.avif
  Cache-Control: public, max-age=31536000, immutable
  Vary: Accept-Encoding

*.svg
  Content-Type: image/svg+xml
  Cache-Control: public, max-age=31536000
  Vary: Accept-Encoding

# HTML files with shorter cache for updates
*.html
  Cache-Control: public, max-age=3600, must-revalidate
  Vary: Accept-Encoding

# API responses with moderate caching
/api/*
  Cache-Control: public, max-age=300, s-maxage=300
  Vary: Accept-Encoding

# Netlify functions
/.netlify/*
  Cache-Control: public, max-age=0, must-revalidate 
