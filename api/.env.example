# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Security
JWT_SECRET=your-super-secure-jwt-secret-key-at-least-256-bits-long
JWT_ISSUER=https://api.nyt-news-explorer.com
JWT_AUDIENCE=nyt-news-explorer
JWT_ACCESS_TOKEN_TTL=900  # 15 minutes
JWT_REFRESH_TOKEN_TTL=2592000  # 30 days

# OAuth 2.0 (RFC 9700)
OAUTH_CLIENT_ID=your-oauth-client-id
OAUTH_CLIENT_SECRET=your-oauth-client-secret
OAUTH_REDIRECT_URI=https://app.nyt-news-explorer.com/auth/callback
OAUTH_AUTHORIZATION_URL=https://accounts.google.com/o/oauth2/v2/auth
OAUTH_TOKEN_URL=https://oauth2.googleapis.com/token
OAUTH_JWKS_URL=https://www.googleapis.com/oauth2/v3/certs

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_SKIP_SUCCESS_HEADERS=false

# Redis (Caching & Sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Database (if needed)
DATABASE_URL=postgresql://user:password@localhost:5432/nyt_news_api

# External APIs
NYT_API_KEY=your-nyt-api-key

# Observability
JAEGER_ENDPOINT=http://localhost:14268/api/traces
OTEL_SERVICE_NAME=nyt-news-api
OTEL_SERVICE_VERSION=1.0.0
LOG_LEVEL=info

# TLS/Security
TLS_CERT_PATH=/path/to/cert.pem
TLS_KEY_PATH=/path/to/key.pem
ENABLE_HTTP3=true

# CORS
CORS_ORIGIN=https://nyt.brainvaultdev.com,http://localhost:3000
CORS_CREDENTIALS=true