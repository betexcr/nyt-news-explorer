{
  "name": "nyt-news-api",
  "version": "1.0.0",
  "description": "High-performance, secure Node.js API following modern best practices (RFC 9700, RFC 8725, OWASP Top-10)",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch --tsconfig tsconfig.json src/server.ts",
    "dev:simple": "tsx watch --tsconfig tsconfig.json src/server-simple.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/server.js",
    "start:simple": "tsx src/server-simple.ts",
    "test": "vitest",
    "test:unit": "vitest run --config vitest.unit.config.ts",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:spec": "npm run test:spec:lint && npm run test:spec:breaking && npm run test:spec:implementation",
    "test:spec:lint": "spectral lint openapi.yaml",
    "test:spec:breaking": "npm run test:spec:breaking:check",
    "test:spec:breaking:check": "oasdiff breaking openapi.yaml openapi.yaml --format text || echo 'No breaking changes (same file)'",
    "test:spec:implementation": "npm run start:simple & sleep 5 && dredd openapi.yaml http://localhost:3000 && kill %1",
    "test:spec:fuzz": "npm run start:simple & sleep 5 && schemathesis run --checks all openapi.yaml --base-url http://localhost:3000 && kill %1",
    "test:contract": "npm run test:contract:verify",
    "test:contract:verify": "jest --testPathPattern=contract --testTimeout=30000",
    "test:performance": "npm run test:perf:smoke && npm run test:perf:load",
    "test:perf:smoke": "k6 run tests/performance/smoke.js",
    "test:perf:load": "k6 run tests/performance/load.js",
    "test:perf:artillery": "artillery run tests/performance/artillery.yml",
    "test:security": "npm run test:security:baseline",
    "test:security:baseline": "docker run --rm -v $(pwd):/workspace -w /workspace -t owasp/zap2docker-stable zap-baseline.py -t http://host.docker.internal:3000 -r zap-report.html",
    "test:security:full": "docker run --rm -v $(pwd):/workspace -w /workspace -t owasp/zap2docker-stable zap-full-scan.py -t http://host.docker.internal:3000 -r zap-full-report.html",
    "test:all": "npm run test:spec && npm run test:unit && npm run test:integration && npm run test:contract && npm run test:performance && npm run test:security:baseline",
    "lint": "eslint src --fix",
    "type-check": "tsc --noEmit",
    "generate:jwks": "node scripts/generate-jwks.js",
    "docker:build": "docker build -t nyt-api .",
    "docker:run": "docker run -p 3000:3000 nyt-api"
  },
  "dependencies": {
    "@apollo/server": "^4.10.4",
    "@as-integrations/fastify": "^2.1.1",
    "@fastify/auth": "^4.6.1",
    "@fastify/autoload": "^5.10.0",
    "@fastify/bearer-auth": "^9.4.0",
    "@fastify/compress": "^7.0.3",
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^8.0.1",
    "@fastify/oauth2": "^7.8.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/redis": "^6.1.1",
    "@fastify/sensible": "^5.6.0",
    "@fastify/swagger": "^8.15.0",
    "@fastify/swagger-ui": "^4.1.0",
    "@fastify/under-pressure": "^8.5.0",
    "@opentelemetry/api": "^1.8.0",
    "@opentelemetry/auto-instrumentations-node": "^0.46.1",
    "@opentelemetry/exporter-jaeger": "^1.24.1",
    "@opentelemetry/sdk-node": "^0.51.1",
    "axios": "^1.11.0",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.1",
    "fastify-plugin": "^4.5.1",
    "graphql": "^16.8.1",
    "graphql-yoga": "^5.3.0",
    "ioredis": "^5.4.1",
    "jose": "^5.2.4",
    "node-jose": "^2.2.0",
    "opossum": "^8.0.0",
    "pino": "^9.1.0",
    "pino-pretty": "^11.1.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@stoplight/spectral-cli": "^6.11.0",
    "@types/bcrypt": "^5.0.2",
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.12.12",
    "@types/opossum": "^8.1.9",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "@vitest/coverage-v8": "^1.6.0",
    "c8": "^9.1.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.3",
    "prettier": "^3.3.0",
    "supertest": "^7.0.0",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.11.2",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "optionalDependencies": {
    "@testcontainers/localstack": "^10.10.3",
    "@testcontainers/postgresql": "^10.10.3",
    "@testcontainers/redis": "^10.10.3",
    "testcontainers": "^10.10.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
